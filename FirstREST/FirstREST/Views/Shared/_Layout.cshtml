<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="~/Content/themes/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/themes/font_awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/themes/ionicons/css/ionicons.min.css">

    <!-- For date selection -->
    <link rel="stylesheet" href="~/Content/themes/plugins/daterangepicker/daterangepicker-bs3.css">

    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/themes/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/Content/themes/dist/css/skins/_all-skins.min.css">

    <link rel="stylesheet" href="~/Content/themes/css/loadingBar.css" />

    <link rel="stylesheet" href="~/Content/css/charts.css" />

</head>

<body class="hold-transition skin-yellow sidebar-mini">

    <div class="wrapper">

        <!-- Main Header -->
        <header class="main-header">

            <!-- Logo -->
            <a href="#" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>360</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>360º</b> Dashboard</span>
            </a>

            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href=""><i class="fa fa-sign-out"></i> Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">

            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">

                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Images/example/user2-160x160.jpg" class="img-circle" alt="User Image">
                    ></div>
                    <div class="pull-left info">
                        <p>Empresa xpto</p>
                        <!-- Status -->
                        <p>ERP Primavera</p>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    <li class="header">MENU</li>
                    <!-- Optionally, you can add icons to the links -->
                    <li><a href="/"><i class="fa fa-globe"></i> <span>Global</span></a></li>
                    <li><a href="/financial"><i class="fa fa-percent"></i> <span>Financial and Accounting</span></a></li>
                    <li><a href="/sales"><i class="fa fa-shopping-bag"></i> <span>Sales</span></a></li>
                    <li><a href="/supplyChain"><i class="fa fa-pie-chart"></i> <span>Supply Chain</span></a></li>
                    <li><a href="/humanResources"><i class="fa fa-group"></i> <span>Human Resources</span></a></li>
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>

        @RenderBody()

        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">
                Turma 1
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2015 <a href="#">FEUP-SINF-2015</a>.</strong> All rights reserved.
        </footer>

        <!-- Loading screen -->
        <div class="modal"></div>

        <!-- jQuery 2.1.4 -->
        <script src="~/Content/themes/plugins/jQuery/jQuery-2.1.4.min.js"></script>
        <!-- Bootstrap 3.3.5 -->
        <script src="~/Content/themes/bootstrap/js/bootstrap.min.js"></script>
        <!-- FastClick -->
        <script src="~/Content/themes/plugins/fastclick/fastclick.js"></script>
        <!-- AdminLTE App -->
        <script src="~/Content/themes/dist/js/app.min.js"></script>
        <!-- Sparkline -->
        <script src="~/Content/themes/plugins/sparkline/jquery.sparkline.min.js"></script>
        <!-- SlimScroll 1.3.0 -->
        <script src="~/Content/themes/plugins/slimScroll/jquery.slimscroll.min.js"></script>
        <!-- ChartJS 1.0.1 -->
        <script src="~/Content/themes/plugins/chartjs/Chart.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js"></script>

        <!-- <script>
            $body = $("body");

            $(document).on({
                ajaxStart: function () { $body.addClass("loading"); },
                ajaxStop: function () { $body.removeClass("loading"); }
            });
        </script> -->

        @RenderSection("ViewJavascript", required: false)
    </div>
</body>
</html>
