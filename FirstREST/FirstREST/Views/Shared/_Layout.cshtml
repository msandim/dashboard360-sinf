<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="/">360º Company Dashboard</a></p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Global Dashboard", "Index", "Dashboard", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Financial and Accounting", "Index", "Financial", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Supply Chain", "Index", "Supply", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Sales", "Index", "Sales", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Human Resources", "Index", "HR", new { area = "" }, null)</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
