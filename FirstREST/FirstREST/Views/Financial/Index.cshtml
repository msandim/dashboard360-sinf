<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Financial Dashboard</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Info boxes -->
        <div class="row">
            <div class="col-md-12">
                <!-- Cash Line chart -->
                <div class="box box-solid box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Cash(€)</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="box-body">
                        <div class="chart">
                            <canvas id="cash_chart" style="height: 250px; width: 364px;" width="364" height="250"></canvas>
                        </div>
                    </div>
                    <!-- /.info-box-content -->
                </div>
            </div>

            <div class="col-md-12">
                <!-- Accounts Line chart -->
                <div class="box box-solid box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Accounts Receivable vs Accounts Payable(€)</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="box-body">
                        <div class="chart">
                            <canvas id="accounts_chart" style="height: 250px; width: 364px;" width="364" height="250"></canvas>
                            <ul id="accounts_legend" class="chart-legend clearfix"></ul>
                        </div>
                    </div>
                    <!-- /.info-box-content -->
                </div>
            </div>

            <div class="col-md-12">

                <!-- Top 10 customers -->
                <div class="box box-solid box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Balance Sheet</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                                <div class="col-sm-12">
                                    <table id="balance_sheet_table" class="table table-bordered table-hover dataTable" role="grid">
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>

            </div>
        </div>

    </section>
</div>
@section ViewJavascript
{
    <script src="~/Content/Core/Utils/ColorGenerator.js"></script>
    <script src="~/Content/Core/Utils/CurrencyUtils.js"></script>
    <script src="~/Content/Core/Utils/DateUtils.js"></script>
    <script src="~/Content/Core/Elements/LineChart.js"></script>
    <script src="~/Content/Core/Elements/PieChart.js"></script>
    <script src="~/Content/Core/Elements/Table.js"></script>
    <script src="~/Content/Core/Views/Financial/CashChart.js"></script>
    <script src="~/Content/Core/Views/Financial/AccountsChart.js"></script>
    <script src="~/Content/Core/Views/Financial/BalanceSheetTable.js"></script>
    <script src="~/Content/financial.js"></script>
}

